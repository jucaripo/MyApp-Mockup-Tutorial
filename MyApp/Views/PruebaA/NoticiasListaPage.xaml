                    <Label Text="Por el Monito reportero" TextColor="#0071BC" Margin="20"  />  
                </StackLayout>
            </StackLayout>
            <Image BackgroundColor="Green" Source="noticia1" Aspect="AspectFill" HeightRequest="360" />
