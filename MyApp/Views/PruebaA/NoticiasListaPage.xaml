                <Image Source="icoMegusta"  WidthRequest="24" HeightRequest="24" />
            </StackLayout>
            <!-- info de contenido -->
            <StackLayout Padding="10,10,10,10">
                <Label Text="¿Que es un Sketch?" TextColor="#7B7B7B" FontSize="24" />
                <Label Text="Pensemos en el Sketch como un primer boceto" TextColor="#7B7B7B" FontSize="16" />
                <Label Text="que realizamos para un proyecto digital que …" TextColor="#7B7B7B" FontSize="16" />
                <Label Text="Leer más..." TextColor="#7B7B7B" FontSize="12" />
            </StackLayout>
            <BoxView BackgroundColor="Black" HeightRequest="2" HorizontalOptions="FillAndExpand" />
        </StackLayout>
        <!-- fin nota template -->
