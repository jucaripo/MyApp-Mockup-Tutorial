                <!--Nota template -->
        <StackLayout >
            <!-- BARRA DE TITULO -->
            <StackLayout Orientation="Horizontal" BackgroundColor="#F7F7F7" >
                 <Image Source="iconoTitulo" BackgroundColor="Lime" WidthRequest="119" HeightRequest="119" />
